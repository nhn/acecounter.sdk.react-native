{
  "name": "acecounter.sdk.react-native",
  "version": "2.9.15",
  "description": "ACE COUNTER SDK for React-Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .tsx --ext .ts src/",
    "format": "prettier --check ./src",
    "start": "rm -rf acecounter.sdk.react-native/dist && tsc -w --outDir acecounter.sdk.react-native/dist",
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version)\" > src/version.ts",
    "prepare": "npm run prebuild && rm -rf dist && tsc"
  },
  "homepage": "https://www.acecounter.com",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --ext .tsx --ext .ts src/ --fix"
    ],
    "./src/**": [
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "NHN DATA AC Development team <dl_acp-sdk@nhndata.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nhn/acecounter.sdk.react-native.git"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.x",
    "@react-native-community/netinfo": "9.x",
    "@sparkfabrik/react-native-idfa-aaid": "^1.0.1",
    "axios": "^1.3.3",
    "events": "^3.3.0",
    "react-native-device-info": "^8.4.9",
    "react": "18.1.0",
    "react-native": "0.70.10"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.8.4",
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
